{
  "openapi": "3.0.1",
  "info": {
    "title": "Product Catalog API",
    "version": "1.0.0",
    "description": "API to manage product catalog including list, retrieve and add products"
  },
  "servers": [
    {
      "url": "http://localhost:30080"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "List all products",
        "responses": {
          "200": {
            "description": "A list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new product",
        "requestBody": {
          "description": "Product to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created"
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "summary": "Get a product by ID",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the product"
          }
        ],
        "responses": {
          "200": {
            "description": "Product details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "p123"
          },
          "name": {
            "type": "string",
            "example": "Smartphone"
          },
          "description": {
            "type": "string",
            "example": "Latest model smartphone with 128GB storage"
          },
          "price": {
            "type": "number",
            "format": "float",
            "example": 499.99
          },
          "available": {
            "type": "boolean",
            "example": true
          }
        },
        "required": ["id", "name", "price"]
      }
    }
  }
}
