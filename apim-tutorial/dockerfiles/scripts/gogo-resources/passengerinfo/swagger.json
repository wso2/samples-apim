{
    "openapi": "3.0.1",
    "info": {
     "title": "PassengerInfoAPI",
     "description": "This is the API definition for Passenger information backend\n",
     "version": "1.0.0"
    },
    "servers": [
     {
      "url": "http://backend-service:8080/train-operations/v1"
     }
    ],
    "security": [
     {
      "default": []
     }
    ],
    "paths": {
     "/passenger-count": {
      "get": {
       "responses": {
        "200": {
         "description": "ok",
         "content": {
          "application/json": {
           "schema": {
            "$ref": "#/components/schemas/Count"
           }
          }
         }
        }
       },
       "security": [
        {
         "default": []
        }
       ],
       "x-auth-type": "Application & Application User",
       "x-throttling-tier": "Unlimited",
       "x-wso2-application-security": {
        "security-types": [
         "oauth2"
        ],
        "optional": false
       }
      }
     }
    },
    "components": {
     "schemas": {
      "Count": {
       "title": "Passenger Count information.",
       "type": "object",
       "properties": {
        "count": {
         "type": "integer",
         "description": "number of passengers for the given time."
        },
        "time": {
         "type": "string",
         "description": "Time."
        }
       }
      }
     },
     "securitySchemes": {
      "default": {
       "type": "oauth2",
       "flows": {
        "implicit": {
         "authorizationUrl": "https://test.com",
         "scopes": {}
        }
       }
      }
     }
    },
    "x-wso2-auth-header": "Authorization",
    "x-wso2-production-endpoints": {
     "urls": [
      "http://backend-service:8080/train-operations/v1"
     ],
     "type": "http"
    },
    "x-wso2-sandbox-endpoints": {
     "urls": [
      "http://backend-service:8080/train-operations/v1"
     ],
     "type": "http"
    },
    "x-wso2-basePath": "/info/1.0.0",
    "x-wso2-transports": [
     "http",
     "https"
    ],
    "x-wso2-response-cache": {
     "enabled": false,
     "cacheTimeoutInSeconds": 300
    }
   }